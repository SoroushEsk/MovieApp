<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_black_color"
    android:padding="30dp"
    android:windowSoftInputMode="adjustPan"
    tools:context=".register.RegisterActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile"
        app:tint="@color/app_yellow_color"
        android:layout_marginBottom="70dp"
        android:layout_gravity="center"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/registerHeightTextInput"
        android:layout_marginVertical="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/genreItemCornerRaduis"
            app:cardBackgroundColor="@color/app_black_color">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="@dimen/registerHeightTextInput"
                    android:layout_height="match_parent"
                    android:id="@+id/nameIcon"
                    android:src="@drawable/user"
                    android:background="@null"
                    android:padding="20dp"
                    app:tint="@color/app_gray_color"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutName"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    app:hintTextColor="@color/app_yellow_color"
                    app:boxStrokeWidth="2dp"
                    android:textColorHint="@color/app_gray_color"
                    app:boxBackgroundColor="@color/app_yellow_color"
                    android:layout_marginTop="2dp"
                    app:cursorColor="@color/app_yellow_color"
                    app:boxStrokeColor="@color/app_yellow_color"
                    android:hint="Name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditTextName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_gray_color"
                        android:layout_marginTop="2dp"
                        android:textColorHint="@color/app_yellow_color"
                        android:layout_gravity="bottom"
                        android:background="@null"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
        <View
            android:id="@+id/nameBorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_genre_item"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/registerHeightTextInput"
        android:layout_marginVertical="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/genreItemCornerRaduis"
            app:cardBackgroundColor="@color/app_black_color">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="@dimen/registerHeightTextInput"
                    android:layout_height="match_parent"
                    android:id="@+id/stdIcon"
                    android:src="@drawable/student"
                    android:background="@null"
                    android:padding="20dp"
                    app:tint="@color/app_gray_color"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutStd"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    app:hintTextColor="@color/app_yellow_color"
                    android:textColorHint="@color/app_gray_color"
                    app:boxStrokeWidth="2dp"
                    app:boxBackgroundColor="@color/app_yellow_color"
                    android:layout_marginTop="2dp"
                    app:cursorColor="@color/app_yellow_color"
                    app:boxStrokeColor="@color/app_yellow_color"
                    android:hint="Student Number">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditTextStd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_gray_color"
                        android:layout_marginTop="2dp"
                        android:textColorHint="@color/app_yellow_color"

                        android:layout_gravity="bottom"
                        android:background="@null"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
        <View
            android:id="@+id/stdBorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_genre_item"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/registerHeightTextInput"
        android:layout_marginVertical="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/genreItemCornerRaduis"
            app:cardBackgroundColor="@color/app_black_color">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="@dimen/registerHeightTextInput"
                    android:layout_height="match_parent"
                    android:id="@+id/emailIcon"
                    android:src="@drawable/email"
                    android:background="@null"
                    android:padding="20dp"
                    app:tint="@color/app_gray_color"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutEmail"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    app:hintTextColor="@color/app_yellow_color"
                    app:boxStrokeWidth="2dp"
                    app:boxBackgroundColor="@color/app_yellow_color"
                    android:textColorHint="@color/app_gray_color"
                    android:layout_marginTop="2dp"
                    app:cursorColor="@color/app_yellow_color"
                    app:boxStrokeColor="@color/app_yellow_color"
                    android:hint="Email">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_gray_color"
                        android:layout_marginTop="2dp"
                        android:textColorHint="@color/app_yellow_color"
                        android:layout_gravity="bottom"
                        android:background="@null"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
        <View
            android:id="@+id/emailBorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_genre_item"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/registerHeightTextInput"
        android:layout_marginVertical="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/genreItemCornerRaduis"
            app:cardBackgroundColor="@color/app_black_color">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/passwordIcon"
                    android:layout_width="@dimen/registerHeightTextInput"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:padding="20dp"
                    android:src="@drawable/password"
                    app:tint="@color/app_gray_color" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutPassword"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:layout_marginTop="2dp"
                    android:hint="Password"
                    android:textColorHint="@color/app_gray_color"
                    app:cursorColor="@color/app_yellow_color"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/app_gray_color"
                    app:hintTextColor="@color/app_yellow_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditTextPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:textColor="@color/app_gray_color"
                        android:textColorHint="@color/app_yellow_color" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
        <View
            android:id="@+id/passwordBorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_genre_item"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="50dp"
        >
        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@color/app_yellow_color"
            android:layout_gravity="center"
            android:textSize="13pt"
            android:fontFamily="sans-serif-light"
            android:paddingVertical="10dp"
            android:clickable="true"
            />
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>