<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0F14"
    tools:context=".home.HomePage">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/home_page_fragment_container"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_page_buttons"
        />
    <LinearLayout
        android:id="@+id/home_page_buttons"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/light_gray_color"
        >
        <ImageView
            android:id="@+id/home_page_home_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/home"
            android:layout_weight="1"
            android:contextClickable="true"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:clickable="true"
            app:tint="@color/app_gray_color"
            />
        <ImageView
            android:id="@+id/home_page_search_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/search"
            android:contextClickable="true"
            android:clickable="true"
            android:padding="16dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:tint="@color/app_gray_color"
            />
        <ImageView
            android:id="@+id/home_page_like_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/heart"
            android:contextClickable="true"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:padding="16dp"
            android:clickable="true"
            app:tint="@color/app_gray_color"
            />

        <ImageView
            android:id="@+id/home_page_profile_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/home_profile"
            android:contextClickable="true"
            android:clickable="true"
            android:padding="16dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:tint="@color/app_gray_color"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>